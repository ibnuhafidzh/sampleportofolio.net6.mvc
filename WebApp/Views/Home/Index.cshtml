                                            <th>Backend</th>
                                            <th>Database</th>
                                            <th>Demo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (@Model.Project.Count > 0)
                                        {

                                            @foreach (var item in Model.Project)
                                            {
                                                var str = "";
                                                @if (item.Type != "Freelance")
                                                {
