@model WebApp.Models.Firebase.About
@{
    ViewBag.Title = "Resume Ibnu Hafidzh";
}
<section id="about" class="parallax-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card-body">
                    <div class="about-thumb">
                        <div class="wow fadeInUp section-title" data-wow-delay="0.4s">
                            <h1>@Html.DisplayFor(modelItem => modelItem.Desc.name)</h1>
                            <p class="color-white">
                                @Html.DisplayFor(modelItem => modelItem.Desc.moto)
                            </p>
                        </div>
                        <div class="wow fadeInUp" data-wow-delay="0.8s">
                            <p>
                                <strong>
                                    @Html.Raw(Model.Desc.detail)
                                </strong>
                            </p>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="wow fadeInUp" data-wow-delay="0.8s">
                                    <div class="h4 mt-0 title">Skills</div>
                                    @if (@Model.Skill == null)
                                    {

                                    }
                                    else
                                    {
                                        @if (@Model.Skill.Count > 0)
                                        {
                                            var groupbytype = @Model.Skill.GroupBy(pp => pp.type).ToList();
                                            foreach (var itemgrp in groupbytype)
                                            {
                                                <div class="row mt-3">
                                                    <div class="col-sm-4">
                                                        <strong class="text-uppercase">@Html.DisplayFor(modelItem => @itemgrp.Key):</strong>
                                                    </div>
                                                    <div class="col-sm-8">
                                                        <strong>
                                                            @foreach (var @subitem in @itemgrp)
                                                            {
                                                                @Html.DisplayFor(modelItem => @subitem.name)  @Html.Raw(", ")

                                                            }
                                                        </strong>
                                                    </div>
                                                </div>

                                            }
                                        }

                                    }
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="wow fadeInUp" data-wow-delay="0.8s">
                                    <p>
                                        @if (@Model.Role == null)
                                        {

                                        }
                                        else
                                        {
                                            @if (@Model.Role.Count > 0)
                                            {
                                                <strong>
                                                    Role  <br />
                                                    @foreach (var item in Model.Role)
                                                    {

                                                        @Html.DisplayFor(modelItem => item.name)  @Html.Raw(" ")
                                                    }
                                                </strong>
                                            }

                                        }
                                    </p>
                                </div>
                                <div class="wow fadeInUp" data-wow-delay="0.8s">
                                    <div class="h4 mt-0 title">Basic Information</div>
                                    <div class="row mt-3">
                                        <div class="col-sm-4">
                                            <strong class="text-uppercase">Phone / Whatsapp:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            <a asp-controller="Home" asp-action="SignIn"
                                               class="btn btn-default btn-block"><b>Download Resume</b></a>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-sm-4">
                                            <strong class="text-uppercase">Email:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            <a href="mailto:ibnu.hz@outlook.com?subject=Feedback&body=Message" class="btn btn-default btn-block">
                                                <b> ibnu.hz@outlook.com </b>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-sm-4">
                                            <strong class="text-uppercase">Address:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            <strong>Jakarta Selatan, Indonesia </strong>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-sm-4">
                                            <strong class="text-uppercase">Language:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            <strong>English, Indonesia</strong>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-sm-4">
                                            <strong class="text-uppercase">Social Media:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            @if (@Model.Sosmed == null)
                                            {
                                                <a class="btn btn-default btn-lg btn-icon"
                                                   href="https://id.linkedin.com/in/ibnuhafidzh"
                                                   target="_blank"
                                                   rel="tooltip"
                                                   title="Follow me on linkedin">
                                                    <i class="fa fa-linkedin"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                @if (@Model.Sosmed.Count > 0)
                                                {
                                                    @foreach (var item in Model.Sosmed)
                                                    {
                                                        <a class="btn btn-default btn-lg btn-icon"
                                                           href=@item.url
                                                           target="_blank"
                                                           rel="tooltip"
                                                           title=@item.detail>
                                                            <i class="fa fa-@Html.Raw(item.name)"></i>
                                                        </a>
                                                    }
                                                }
                                                else
                                                {
                                                    <a class="btn btn-default btn-lg btn-icon"
                                                       href="https://id.linkedin.com/in/ibnuhafidzh"
                                                       target="_blank"
                                                       rel="tooltip"
                                                       title="Follow me on linkedin">
                                                        <i class="fa fa-linkedin"></i>
                                                    </a>
                                                }
                                            }

                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@if (@Model.Project == null)
{

